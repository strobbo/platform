<%= form_for(Status.new(:event_id => @event.id, :user_id => current_user.id)) do |f| %>
  <div class="field">
    <%= f.label :text %><br />
    <%= f.text_field :text %>
  </div>

  <div>
		<%= f.hidden_field :event_id %>
	</div>

  <div>
		<%= f.hidden_field :user_id %>
	</div>

  <div class="actions">
    <%= f.submit "Join" %>
  </div>
<% end %>
