<h1>Notificações</h1>
<% @activities.each do |activity| %>
	<% if activity.trackable %>		
		<% conditional_tag(:strong, activity.unread?(current_user)) do %>
			<%= link_to activity.owner.name, activity.owner if activity.owner %>
			<%= render_activity activity %>			
		<% end %>
		<br/><br/>
	<% end %>
<% end %>
